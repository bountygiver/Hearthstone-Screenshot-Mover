<Window x:Class="HSScreenshotMover.RenameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HSScreenshotMover"
        mc:Ignorable="d"
        Title="Rename File" Width="300" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Height="120" Loaded="Window_Loaded">
    <StackPanel VerticalAlignment="Top">
        <Label x:Name="lblLabel" Content="Rename:"/>
        <TextBox x:Name="txtNewName" Height="23" TextWrapping="Wrap"/>
        <Grid Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Margin="2" x:Name="button" Content="OK" Click="OK_Clicked" IsDefault="True"/>
            <Button Margin="2" x:Name="button1" Content="Cancel" Grid.Column="1" Click="Cancel_Clicked" IsCancel="True"/>
        </Grid>

    </StackPanel>
</Window>
